<%= javascript_include_tag "jquery.multiselect.js"%>
<%= semantic_form_for Instance.new do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :label => Time.now.year%>
    <%= f.input :canonical, :label => "FQDN" %>
    <%= f.input :location, :label => "Data Center"%>
    <%= f.input :location, :label => "Group Owner", :as => :select, :collection => Hash[Group.all.map{|b| [b.name,b.id]}]%>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>