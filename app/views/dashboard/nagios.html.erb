<html lang="en">
<head>
    <meta charset="utf-8" />
<meta http-equiv="refresh" content="10"; url="/dashboard/nagios">
<h1> Started collecting data on: <%= Time.at(Nagios.last.timestamp)%>  </h1>

    <table width="1000" border="1">
        <th>Name</th>
        <th>Service</th>
        <th>Status and Output</th>

      <%@nagios.reverse.each{|entry| %>
      <tr>
      <%case entry['current_state']
        when "0"
          tag = "class='passed'> " + entry['plugin_output']
        when "1"
          tag = "class='warning'> " + entry['plugin_output']
        when "2"
          tag = "class='failed'>" + entry['plugin_output']
        end  %>
        <td width="200"><%= entry['host_name']%></td>
        <td width="200"><%= entry['service_description']%></td>
        <td width="600"<%= tag%></td>  

        </td>
      </tr>  <%}%>
    </table>   
</head>
</html>
